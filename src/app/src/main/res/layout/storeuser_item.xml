<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"

            android:id="@+id/imgl"
            app:civ_border_width="2dp"
            app:civ_border_color= "@color/black" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nametext"
            android:text="UserName"
              android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/likeIDtext"
            android:layout_below="@id/nametext"
            android:text="LikeIDs"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginLeft="100dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/likeIDs"
            android:layout_below="@id/likeIDtext"
            android:text="likeIDs"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goodIDstext"
            android:layout_below="@id/nametext"
            android:text="GoodIDs"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginLeft="225dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goodIDs"
            android:layout_below="@id/goodIDstext"
            android:text="goodIDs"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginLeft="225dp" />

        <com.google.android.material.button.MaterialButton

            android:id="@+id/delete"

            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@id/goodIDs"
            android:layout_marginStart="250dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="250dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@color/Green_Lake"
            android:textSize="10sp"
            android:text="Delete!" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>